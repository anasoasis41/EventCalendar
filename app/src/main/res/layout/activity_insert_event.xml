<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_insert_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="riahi.com.eventcalendar.apiclient.InsertEventActivity">

    <EditText
        android:hint="Nom de l'evenement"
        android:layout_width="317dp"
        android:layout_height="71dp"
        android:id="@+id/tvName"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:hint="selectionner une date"
        android:layout_width="316dp"
        android:layout_height="82dp"
        android:id="@+id/tvDate"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <EditText
        android:text="12:00"
        android:layout_width="98dp"
        android:layout_height="67dp"
        android:id="@+id/tvDebut"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <EditText
        android:text="14:00"
        android:layout_width="102dp"
        android:layout_height="70dp"
        android:id="@+id/tvFin"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:background="@color/azure"
        android:layout_width="46dp"
        android:layout_height="29dp"
        android:id="@+id/tvColor"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.02"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvFin" />

    <TextView
        android:text="Selectionner une couleur:"
        android:layout_width="99dp"
        android:layout_height="32dp"
        android:id="@+id/textView2"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginStart="88dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDebut" />

    <Button
        android:text="insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnInsert"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</android.support.constraint.ConstraintLayout>
